        <dt class="text-sm font-medium text-gray-900">About Yourself</dt>
        <dd class="mt-1 text-sm text-gray-700 sm:col-span-2 sm:mt-0"><%= form.text_area :summary, class:'w-80' %></dd>
      </div>
      <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
        <dt class="text-sm font-medium text-gray-900">Work Experience</dt>
        <dd class="mt-1 text-sm text-gray-700 sm:col-span-2 sm:mt-0"><%= form.text_area :work_experience, class:'w-80' %></dd>
      </div>
      <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
        <dt class="text-sm font-medium text-gray-900">Languages</dt>
        <dd class="mt-1 text-sm text-gray-700 sm:col-span-2 sm:mt-0"><%= form.text_field :languages %></dd>
      </div>
      <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
        <dt class="text-sm font-medium text-gray-900">Skills</dt>
        <dd class="mt-1 text-sm text-gray-700 sm:col-span-2 sm:mt-0"><%= form.text_field :skills %></dd>
      </div>
      <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
        <dt class="text-sm font-medium text-gray-900">Certifications</dt>
        <dd class="mt-1 text-sm text-gray-700 sm:col-span-2 sm:mt-0"><%= form.file_field :certifications %></dd>
      </div>
      <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
        <dt class="text-sm font-medium text-gray-900">Projects</dt>
        <dd class="mt-1 text-sm text-gray-700 sm:col-span-2 sm:mt-0"><%= form.file_field :projects %></dd>
      </div>
    </dl>
    <%= form.button 'Update Proifle!', class: 'save-btn mt-5' %>
    <% end %>
  </div>
</div>
