    <%= render "avatar_preview", form: form, profile: @profile %>

    <div class="my-5">
      <%= form.label '全名', class: "font-semibold #{"border-amber-500 border-b-4 border-dashed" if @profile.errors[:full_name].any?}" %>
      <%= form.text_field :full_name, class: "input" %>
    </div>

    <div class="my-5">
      <%= form.label '聯絡電話', class: "font-semibold #{"border-amber-500 border-b-4 border-dashed" if @profile.errors[:phone].any?}" %>
      <%= form.text_field :phone, placeholder: "輸入您的手機號碼", class: "input" %>
    </div>

    <div class="my-5">
      <%= form.label '地址', class: "font-semibold #{"border-amber-500 border-b-4 border-dashed" if @profile.errors[:address].any?}" %>
      <%= form.text_field :address, placeholder: "例如：台灣台北市 或 台北市大安區", class: "input" %>
    </div>

    <div class="my-5">
      <%= form.label '職稱', class: "font-semibold" %>
      <span class="text-slate-400 text-sm">選填</span>
      <%= form.text_field :job_title, class: "input" %>
    </div>

    <div class="my-5">
      <%= form.label '學歷', class: "font-semibold #{"border-amber-500 border-b-4 border-dashed" if @profile.errors[:education].any?}" %>
      <%= form.text_field :education, placeholder: "例如：台灣大學電機系",class: "input"  %>
    </div>

    <div class="my-5">
      <%= form.label '關於我', class: "font-semibold #{"border-amber-500 border-b-4 border-dashed" if @profile.errors[:about_me].any?}" %>
      <%= form.text_area :about_me, size: "60x10", class: "input"  %>
    </div>

    <div class="my-5">
      <%= form.label '語言', class: "inline-block font-semibold mb-2" %>
      <span class="text-slate-400 text-sm">選填</span>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <% ["中文", "英文", "日文", "西班牙文", "法文", "德文"].each do |language| %>
          <div class="flex flex-col">
            <div class="mb-1">
              <%= form.label language, class: "px-2 mb-2 block border-amber-500 border-l-4 border-solid w-fit" %>
            </div>
            <%= form.select :languages, options_for_select([["程度", "", { disabled: true, selected: true, hidden: true }], ["初階", "初階"], ["中等", "中等"], ["進階", "進階"]]), {}, { name: "profile[languages][#{language}]", class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 w-full" } %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="my-5">
      <%= form.label '技能', class: "font-semibold" %>
      
      <template data-nested-form-target="template">
        <%= form.fields_for :skills, Skill.new, child_index: 'NEW_RECORD' do |skill_fields| %>
          <%= render "profile_skill_form", form: skill_fields %>
        <% end %>
      </template>
      <div>
        <%= form.fields_for :skills do |skill_fields| %>
          <%= render "profile_skill_form", form: skill_fields %>
        <% end %>
        <div data-nested-form-target="target">
          <%= form.button '+', { data: { action: "nested-form#add" }, class: "rounded-lg py-2 px-3 m-2 bg-amber-500 text-white inline-block font-medium cursor-pointer"} %>
        </div>
      </div>
    </div>

    <div class="my-5">
      <%= form.label '工作經驗', class: "font-semibold #{"border-amber-500 border-b-4 border-dashed" if @profile.errors[:about_me].any?}" %>
      <%= form.text_area :work_experience, size: "60x10", class: "input"  %>
    </div>

    <div class="my-5">
      <%= form.label '專案', class: "font-semibold" %>
      <span class="text-slate-400 text-sm">選填</span>
      <%= form.text_field :projects, placeholder: "附上專案連結", class: "input"  %>
    </div>

    <div class="my-5">
      <%= form.label '社群連結', class: "font-semibold" %>
      <span class="text-slate-400 text-sm">選填</span>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-3">
        <div class="flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg"  viewBox="0 0 30 30" width="40px" height="40px"  class="mr-2">
            <path d="M24,4H6C4.895,4,4,4.895,4,6v18c0,1.105,0.895,2,2,2h18c1.105,0,2-0.895,2-2V6C26,4.895,25.105,4,24,4z M10.954,22h-2.95 v-9.492h2.95V22z M9.449,11.151c-0.951,0-1.72-0.771-1.72-1.72c0-0.949,0.77-1.719,1.72-1.719c0.948,0,1.719,0.771,1.719,1.719 C11.168,10.38,10.397,11.151,9.449,11.151z M22.004,22h-2.948v-4.616c0-1.101-0.02-2.517-1.533-2.517 c-1.535,0-1.771,1.199-1.771,2.437V22h-2.948v-9.492h2.83v1.297h0.04c0.394-0.746,1.356-1.533,2.791-1.533 c2.987,0,3.539,1.966,3.539,4.522V22z"/>
          </svg>
          <%= form.text_field :linkedin, class: "input"  %>
        </div>
        <div class="flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg"  viewBox="0 0 30 30" width="40px" height="40px" class="mr-2">
            <path d="M24,4H6C4.895,4,4,4.895,4,6v18c0,1.105,0.895,2,2,2h10v-9h-3v-3h3v-1.611C16,9.339,17.486,8,20.021,8 c1.214,0,1.856,0.09,2.16,0.131V11h-1.729C19.376,11,19,11.568,19,12.718V14h3.154l-0.428,3H19v9h5c1.105,0,2-0.895,2-2V6 C26,4.895,25.104,4,24,4z"/>
          </svg>
          <%= form.text_field :facebook, class: "input"  %>
        </div>
        <div class="flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg"  viewBox="0 0 30 30" width="40px" height="40px" class="mr-2">
            <path d="M15,3C8.373,3,3,8.373,3,15c0,5.623,3.872,10.328,9.092,11.63C12.036,26.468,12,26.28,12,26.047v-2.051 c-0.487,0-1.303,0-1.508,0c-0.821,0-1.551-0.353-1.905-1.009c-0.393-0.729-0.461-1.844-1.435-2.526 c-0.289-0.227-0.069-0.486,0.264-0.451c0.615,0.174,1.125,0.596,1.605,1.222c0.478,0.627,0.703,0.769,1.596,0.769 c0.433,0,1.081-0.025,1.691-0.121c0.328-0.833,0.895-1.6,1.588-1.962c-3.996-0.411-5.903-2.399-5.903-5.098 c0-1.162,0.495-2.286,1.336-3.233C9.053,10.647,8.706,8.73,9.435,8c1.798,0,2.885,1.166,3.146,1.481C13.477,9.174,14.461,9,15.495,9 c1.036,0,2.024,0.174,2.922,0.483C18.675,9.17,19.763,8,21.565,8c0.732,0.731,0.381,2.656,0.102,3.594 c0.836,0.945,1.328,2.066,1.328,3.226c0,2.697-1.904,4.684-5.894,5.097C18.199,20.49,19,22.1,19,23.313v2.734 c0,0.104-0.023,0.179-0.035,0.268C23.641,24.676,27,20.236,27,15C27,8.373,21.627,3,15,3z"/>
          </svg>
          <%= form.text_field :github, class: "input"  %>
        </div>
        <div class="flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-10 h-10 mr-2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 21a9.004 9.004 0 008.716-6.747M12 21a9.004 9.004 0 01-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 017.843 4.582M12 3a8.997 8.997 0 00-7.843 4.582m15.686 0A11.953 11.953 0 0112 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0121 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0112 16.5c-3.162 0-6.133-.815-8.716-2.247m0 0A9.015 9.015 0 013 12c0-1.605.42-3.113 1.157-4.418" />
          </svg>
          <%= form.text_field :website, class: "input"  %>
        </div>
      </div>
    </div>

    <div>
      <%= form.submit 'Save', class: "save-btn" %>
    </div>