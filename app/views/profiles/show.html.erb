<article>
  <section class="container mx-auto p-4">
    <div class="bg-white shadow-md rounded-lg p-6 md:flex">
      <picture class="md:w-1/4">
        <%= image_tag(@profile&.avatar, class: "rounded-full w-32 h-32 mx-auto") if @profile&.avatar.present? %>
      </picture>
      <div class="md:w-3/4 mt-4 md:mt-0 md:pl-4">
        <h1 class="text-2xl font-semibold"><%= @profile.full_name %></h1>
        <p class="text-gray-600"><%= @profile.job_title %></p>

        <div class="mt-4">
          <h2 class="text-lg font-semibold">聯絡資訊</h2>
          <ul class="mt-2 text-gray-700">
            <li>電子信箱：<span><%= current_user.email %></span></li>
            <li>電話： <%= @profile.phone %></li>
            <li>所在地： <%= @profile.address %></li>
          </ul>
        </div>

        <div class="mt-4">
          <span class="text-lg font-semibold">關於我</span>
          <p class="text-gray-700">
            <%= @profile.about_me %>
          </p>
        </div>
        
        <div class="mt-4">
          <h2 class="text-lg font-semibold">學歷</h2>
          <ul class="mt-2 text-gray-700">
            <li><%= @profile.education %></li>
          </ul>
        </div>
        <div class="mt-4">
          <h2 class="text-lg font-semibold">語言</h2>
          <ul class="mt-2 text-gray-700">
            <% @profile.languages.each do |language, level| %>
              <li><%= "#{language} • #{level}" %></li>
            <% end %>
          </ul>
        </div>
        <div class="mt-4">
          <h2 class="text-lg font-semibold">技能</h2>
          <ul class="mt-2 text-gray-700">
            <% @profile.skills.each do |skill| %>
              <li><%= skill.tag %></li>
            <% end %>
          </ul>
        </div>
        <div class="mt-4">
          <h2 class="text-lg font-semibold">工作經驗</h2>
          <div class="mt-2 text-gray-700">
            <p><%= @profile.work_experience %></p>
          </div>
        </div>
        <div class="mt-4">
          <h2 class="text-lg font-semibold">社群媒體</h2>
          <div class="grid lg:grid-cols-2 gap-3 mt-2">
            <div class="flex items-center">
              <div>
                <svg xmlns="http://www.w3.org/2000/svg"  viewBox="0 0 30 30" width="24px" height="24px"  class="mr-2">
                  <path d="M24,4H6C4.895,4,4,4.895,4,6v18c0,1.105,0.895,2,2,2h18c1.105,0,2-0.895,2-2V6C26,4.895,25.105,4,24,4z M10.954,22h-2.95 v-9.492h2.95V22z M9.449,11.151c-0.951,0-1.72-0.771-1.72-1.72c0-0.949,0.77-1.719,1.72-1.719c0.948,0,1.719,0.771,1.719,1.719 C11.168,10.38,10.397,11.151,9.449,11.151z M22.004,22h-2.948v-4.616c0-1.101-0.02-2.517-1.533-2.517 c-1.535,0-1.771,1.199-1.771,2.437V22h-2.948v-9.492h2.83v1.297h0.04c0.394-0.746,1.356-1.533,2.791-1.533 c2.987,0,3.539,1.966,3.539,4.522V22z"/>
                </svg>
              </div>
              <p class="overflow-auto" title="<%= @profile&.linkedin %>"><%= @profile&.linkedin %></p>
            </div>
            <div class="flex items-center">
              <div>
                <svg xmlns="http://www.w3.org/2000/svg"  viewBox="0 0 30 30" width="24px" height="24px" class="mr-2">
                  <path d="M24,4H6C4.895,4,4,4.895,4,6v18c0,1.105,0.895,2,2,2h10v-9h-3v-3h3v-1.611C16,9.339,17.486,8,20.021,8 c1.214,0,1.856,0.09,2.16,0.131V11h-1.729C19.376,11,19,11.568,19,12.718V14h3.154l-0.428,3H19v9h5c1.105,0,2-0.895,2-2V6 C26,4.895,25.104,4,24,4z"/>
                </svg>
              </div>
              <p class="overflow-auto" title="<%= @profile&.facebook %>"><%= @profile&.facebook %></p>
            </div>
            <div class="flex items-center">
              <div>
                <svg xmlns="http://www.w3.org/2000/svg"  viewBox="0 0 30 30" width="24px" height="24px" class="mr-2">
                  <path d="M15,3C8.373,3,3,8.373,3,15c0,5.623,3.872,10.328,9.092,11.63C12.036,26.468,12,26.28,12,26.047v-2.051 c-0.487,0-1.303,0-1.508,0c-0.821,0-1.551-0.353-1.905-1.009c-0.393-0.729-0.461-1.844-1.435-2.526 c-0.289-0.227-0.069-0.486,0.264-0.451c0.615,0.174,1.125,0.596,1.605,1.222c0.478,0.627,0.703,0.769,1.596,0.769 c0.433,0,1.081-0.025,1.691-0.121c0.328-0.833,0.895-1.6,1.588-1.962c-3.996-0.411-5.903-2.399-5.903-5.098 c0-1.162,0.495-2.286,1.336-3.233C9.053,10.647,8.706,8.73,9.435,8c1.798,0,2.885,1.166,3.146,1.481C13.477,9.174,14.461,9,15.495,9 c1.036,0,2.024,0.174,2.922,0.483C18.675,9.17,19.763,8,21.565,8c0.732,0.731,0.381,2.656,0.102,3.594 c0.836,0.945,1.328,2.066,1.328,3.226c0,2.697-1.904,4.684-5.894,5.097C18.199,20.49,19,22.1,19,23.313v2.734 c0,0.104-0.023,0.179-0.035,0.268C23.641,24.676,27,20.236,27,15C27,8.373,21.627,3,15,3z"/>
                </svg>
              </div>
              <p class="overflow-auto" title="<%= @profile&.github %>"><%= @profile&.github %></p>
            </div>
            <div class="flex items-center">
              <div>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 mr-2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 21a9.004 9.004 0 008.716-6.747M12 21a9.004 9.004 0 01-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 017.843 4.582M12 3a8.997 8.997 0 00-7.843 4.582m15.686 0A11.953 11.953 0 0112 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0121 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0112 16.5c-3.162 0-6.133-.815-8.716-2.247m0 0A9.015 9.015 0 013 12c0-1.605.42-3.113 1.157-4.418" />
                </svg>
              </div>
              <p class="overflow-auto" title="<%= @profile&.website %>"><%= @profile&.website %></p>
            </div>
          </div>
        </div>
      </div>
      <span class="block mt-5">
        <%= link_to edit_profile_path do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8 rounded-lg bg-amber-500 hover:bg-amber-800 text-white font-lg cursor-pointer p-1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
          </svg>
        <% end %>
      </span>
    </div>
    <div class="mt-4">
      <section class="mt-6 bg-white shadow-md rounded-lg p-6">
        <h2 class="text-xl font-semibold mb-2">近期履歷</h2>
    
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
          <div class="p-5 border border-gray-300 rounded-md bg-amber-50 flex justify-center items-center">
              <%= link_to profile_path do %>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8 rounded-lg bg-amber-500 hover:bg-amber-800 text-white font-lg cursor-pointer p-1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
                </svg>
              <% end %>
          </div>
          <div class="p-5 border border-gray-300 rounded-md bg-amber-50 flex justify-center items-center">
            <%= link_to profile_path do %>
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8 rounded-lg bg-gray-500 hover:bg-gray-800 text-white font-lg cursor-pointer p-1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 10.5V6.75a4.5 4.5 0 10-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 002.25-2.25v-6.75a2.25 2.25 0 00-2.25-2.25H6.75a2.25 2.25 0 00-2.25 2.25v6.75a2.25 2.25 0 002.25 2.25z" />
              </svg>
            <% end %>
          </div>
          
          <div class="p-5 border border-gray-300 rounded-md bg-amber-50 flex justify-center items-center">
            <%= link_to profile_path do %>
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8 rounded-lg bg-gray-500 hover:bg-gray-800 text-white font-lg cursor-pointer p-1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 10.5V6.75a4.5 4.5 0 10-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 002.25-2.25v-6.75a2.25 2.25 0 00-2.25-2.25H6.75a2.25 2.25 0 00-2.25 2.25v6.75a2.25 2.25 0 002.25 2.25z" />
              </svg>
            <% end %>
          </div>
        </div>
      </section>
    </div>
  </section>
</article>
