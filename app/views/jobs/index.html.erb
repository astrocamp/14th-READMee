
    

<div class="container mx-auto bg-gray-50">
   <h1 class="text-center text-5xl"> 職缺列表</h1>

  
    <div class="container mx-auto w-80 rounded-lg bg-amber-500  py-2 m-5 text-white">
        <% if @company %>
        <div>
            <%= link_to "新增職缺", new_job_path, class: "block text-white text-center" %>
        </div>
        <% end %>
    </div>
    
    
    <div class=" my-5">
      <% @jobList.each do |job| %>
        
        <ul class=" justify-between  border-b-2 p-5 m-2 leading-6">
           <div>
             <li class="md:flex">   
                <div class="md:w-2/3  p-2">
                    <%= link_to job.title, job_path(job), class: "text-2xl" %>
                    <div><%= truncate(job.content, length: 100) %></div>
                </div> 
                <div class="md:w-1/3  p-2">
                    <div>需求人數: <%= job.num_of_people %></div>
                    <div>年資: <%= job.seniority %></div>
                    <div>薪水: <%= job.salary %></div> 
                </div>    
                      
            </li>
           </div>

            <div class="container mx-auto flex text-white m-5 p-2">
                <li >
                 <%= link_to "編輯", edit_job_path(job), class:"rounded-lg bg-amber-500 px-8 py-2 m-2"%>    
                </li>
                <li>
                    <%= link_to "刪除", job_path(job), data:{turbo_method:"delete", turbo_confirm:"是否刪除"} , class:" rounded-lg bg-amber-500 px-8 py-2 m-2" %>
                </li>
            </div>    
        </ul>
      <% end %>
    </div>
    
</div>
