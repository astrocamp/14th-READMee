<div class="container mx-auto w-1/3 p-3 bg-slate-100 text-left">
    <%= form_with(model: @job, data:{ turbo:false }) do |f| %>
    <div>
        <p>標題</p>
        <%= f.text_field :title, class: "w-full" %>
    </div>
    <div>
        <p>內容</p>
        <%= f.text_area :content, class: "w-full" %>
    </div>
    <div>
        <p>地址</p>
        <%= f.text_field :address, class: "w-full" %>
    </div>
    <div>
        <p>需求人數</p>
        <%= f.number_field :num_of_people, class: "w-full" %>    
    </div>
    <div>
        <p>年資</p>
        <%= f.number_field :seniority, class: "w-full" %>    
    </div>
    <div>
        <p>薪水</p>
        <%= f.number_field :salary, class: "w-full" %>    
    </div>
    <button class="rounded-lg bg-green-400 px-8 py-2 my-2 text-white">
        <%= f.submit "確定"%>
    </button>
    
    
    <% end %>
  </div>