<section class="container mx-auto flex flex-col md:flex-row ">
    
    <div class="md:w-2/3 border-2 m-5 p-3">
        <h1 class="text-3xl"><%= @job.title %></h1>
        <div><%= @job.company_name %></div>
        <div><%= @job.content %></div>
    </div>

    <div class=" md:w-1/3 border-2 m-5 p-3">
        <div>地址: <%= @job.address %></div>
        <div>需求人數: <%= @job.num_of_people %></div>
        <div>年資: <%= @job.seniority %></div>
        <div>薪水: <%= @job.salary %></div>
    </div>
    
    
</section>

