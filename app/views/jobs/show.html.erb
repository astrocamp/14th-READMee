<section class="flex justify-center w-full">
  <div class="max-w-screen-lg p-16 mt-20 bg-white shadow-2xl">
    <div class="flex items-end min-h-min">
      <div class="flex flex-col text-center">

        <div class="max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto">

          <div class="grid gap-12 md:grid-cols-3">
            <div class="col-span-2">
              <h2 class="text-3xl font-bold text-gray-800 lg:text-4xl dark:text-white">
                <%= @job.title %>
              </h2>
              <p class="mt-3 text-gray-800 dark:text-gray-400">
                <p class="text-xl font-semibold">職缺內容:</p>
                <hr>
                <div class="whitespace-pre-line">
                  <%= @job.content %>
                </div>
              </p>
            </div>
            <div class="space-y-6 lg:space-y-4">
              <div class="flex items-center">
                <span class="flex-shrink-0 inline-flex justify-center items-center w-[46px] h-[46px] rounded-full border border-gray-200 bg-white text-gray-800 shadow-sm dark:bg-slate-900 dark:border-gray-700 dark:text-gray-200">
                  <%= image_tag "jobs_show_people.png", class: "w-6 h-6" %>
                </span>
                <div class="ml-5">
                  <h3 class="text-base font-semibold text-gray-800 align-middle sm:text-lg dark:text-gray-200">
                    需求人數: <%= @job.num_of_people %> 人
                  </h3>
                </div>
              </div>

              <div class="flex items-center">
                <span class="flex-shrink-0 inline-flex justify-center items-center w-[46px] h-[46px] rounded-full border border-gray-200 bg-white text-gray-800 shadow-sm dark:bg-slate-900 dark:border-gray-700 dark:text-gray-200">
                  <%= image_tag "jobs_show_seniority.png", class: "w-6 h-6" %>
                </span>
                <div class="ml-5">
                  <h3 class="text-base font-semibold text-gray-800 sm:text-lg dark:text-gray-200">
                    年資: <%= @job.seniority %>
                  </h3>
                </div>
              </div>

              <div class="flex items-center">
                <span class="flex-shrink-0 inline-flex justify-center items-center w-[46px] h-[46px] rounded-full border border-gray-200 bg-white text-gray-800 shadow-sm dark:bg-slate-900 dark:border-gray-700 dark:text-gray-200">
                  <%= image_tag "jobs_show_salary.png", class: "w-6 h-6" %>
                </span>
                <div class="ml-5">
                  <h3 class="text-base font-semibold text-gray-800 sm:text-lg dark:text-gray-200">
                    薪水: <%= @job.salary %>
                  </h3>
                </div>
              </div>

              <div class="flex items-center">
                <span class="flex-shrink-0 inline-flex justify-center items-center w-[46px] h-[46px] rounded-full border border-gray-200 bg-white text-gray-800 shadow-sm dark:bg-slate-900 dark:border-gray-700 dark:text-gray-200">
                  <%= image_tag "jobs_show_address.png", class: "w-6 h-6" %>
                </span>
                <div class="ml-5">
                  <h3 class="text-base font-semibold text-gray-800 sm:text-lg dark:text-gray-200">
                    地址: <%= @job.company.address %>
                  </h3>
                </div>
              </div>
              <%= form_with(model: @job, data: { turbo: false}, url: job_seeker_list_path, method: :post) do |f| %>
                <% if current_user.role == "job_seeker" %>
                  <%= f.submit "馬上應徵", class: "top-4 right-80 inline-block px-4 py-2 mx-auto text-center text-white rounded-lg cursor-pointer bg-amber-500 hover:bg-amber-600" %>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>