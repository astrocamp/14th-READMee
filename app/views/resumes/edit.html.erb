<%= form_with(url: update_resume_path(account: current_user.account, id: @resume.id), method: "patch", model: @resume, data: { turbo: false }) do |f| %>
  <%= f.submit "更新", name: "save", class: "right-72 ml-5 mt-5 top-32 inline-block px-5 py-3 mx-auto text-center text-white rounded-lg cursor-pointer bg-amber-500 hover:bg-amber-800" %>

  <% if @resume.publish %>
    <div class="inline-block px-5 py-3 mx-auto mt-5 text-center text-white rounded-lg cursor-pointer top-32 right-96 top-10 bg-amber-500 hover:bg-amber-800" data-serial="<%= @resume.id %>" data-account="<%= current_user.account %>" data-action="click->unPublish#unPublish" data-controller="unPublish" data-publish="<%= @resume.publish %>">取消發佈</div>
  <% else %>
    <div class="inline-block px-5 py-3 mx-auto mt-5 text-center text-white rounded-lg cursor-pointer top-32 right-96 top-10 bg-amber-500 hover:bg-amber-800" data-serial="<%= @resume.id %>" data-account="<%= current_user.account %>" data-action="click->publish#updatePublish" data-controller="publish" data-publish="<%= @resume.publish %>">發佈</div>
  <% end %>

  <div class="max-w-screen-lg mt-20 mb-16 ml-5 bg-white shadow-2xl section-inputs sm:p-4 md:p-8 lg:p-16 min-h-1000">
    <%= render partial: "area1", locals: { f: f } %>
    <%= render partial: "area2", locals: { f: f } %>
    <%= render partial: "area3", locals: { f: f } %>
    <%= render partial: "area4", locals: { f: f } %>
  </div>

<% end %>

  <div class="fixed bottom-0 right-0 hidden bg-gray-100 xl:block top-68px" data-controller="resumeComponent" data-serial="<%= @resume.id %>" data-account="<%= current_user.account %>">
    <div class="flex flex-col items-center justify-between h-full overflow-y-scroll">

      <div class="px-10 pt-10 custom-width-190px">
        <div class="flex flex-col items-center p-3 mb-10 bg-white rounded-lg shadow-xl outline-none">
          <p class="py-3 text-amber-700">基本資料</p>
          <span>樣式一</span>
          <%= image_tag "area_1_component_1.png",
            class: "cursor-pointer p-2 border-2  hover:border-amber-500 hover:duration-150",
            data: {
              area1: 1,
              action: "click->resumeComponent#saveComponent"
          } %>
          <span>樣式二</span>
          <%= image_tag "area_1_component_3.png",
          class: "cursor-pointer p-2 border-2 hover:border-amber-500 hover:duration-150",
            data: {
              area1: 3,
              action: "click->resumeComponent#saveComponent"
          } %>
        </div>

        <div class="flex flex-col items-center p-3 mb-10 bg-white rounded-lg shadow-xl outline-none">
          <p class="py-3 text-amber-700">工作經驗</p>
          <span>樣式一</span>
          <%= image_tag "work_experience_part_1.png",
            class: "cursor-pointer p-2 border-2 hover:border-amber-500 hover:duration-150",
            data: {
              area2: 1,
              action: "click->resumeComponent#saveComponent"
          } %>
          <span>樣式二</span>
          <%= image_tag "work_experience_part_3.png",
            class: "cursor-pointer p-2 border-2 hover:border-amber-500 hover:duration-150",
            data: {
            area2: 3,
              action: "click->resumeComponent#saveComponent"
          } %>
        </div>

        <div class="flex flex-col items-center p-3 mb-10 bg-white rounded-lg shadow-xl outline-none">
          <p class="py-3 text-amber-700">專案</p>
          <span>樣式一</span>
          <%= image_tag "project_part_2.png",
            class: "cursor-pointer p-2 border-2 hover:border-amber-500 hover:duration-150",
            data: {
            area3: 1,
              action: "click->resumeComponent#saveComponent"
          } %>
          <span>樣式二</span>
          <%= image_tag "project_part_1.png",
            class: "cursor-pointer p-2 border-2 hover:border-amber-500 hover:duration-150",
            data: {
            area3: 2,
              action: "click->resumeComponent#saveComponent"
          } %>
        </div>

        <div class="flex flex-col items-center p-3 mb-10 bg-white rounded-lg shadow-xl outline-none">
          <p class="py-3 text-amber-700">教育</p>
          <span>樣式一</span>
          <%= image_tag "education_part_1.png",
            class: "cursor-pointer p-2 border-2 hover:border-amber-500 hover:duration-150",
            data: {
            area4: 1,
              action: "click->resumeComponent#saveComponent"
          } %>
          <span>樣式二</span>
          <%= image_tag "education_part_2.png",
            class: "cursor-pointer p-2 border-2 hover:border-amber-500 hover:duration-150",
            data: {
            area4: 2,
              action: "click->resumeComponent#saveComponent"
          } %>
        </div>

      </div>
    </div>
  </div>