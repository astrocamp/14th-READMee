<div id="content" data-controller="resume">
  <section class="w-full flex justify-between pl-32">  
    <div class="min-h-1000 bg-white max-w-screen-lg p-16 shadow-2xl mr-1 mt-28 mb-16">
      <div class="flex">
        <div class="inline-block custom-width-250px flex justify-center items-center">
          <img class="inline-block h-32 w-32 rounded-full" src="https://picsum.photos/200/200/?random=10">
          <%= img_tag @profile.avatar %>
        </div>
        <div class="flex items-center inline-block w-60" data-resume-target="basicInfo">
          <p data-resume-target="basicInfoContent"><%= @formatted_basic_info %></p>
          <textarea data-resume-target="basicInfoForm" class="w-full h-60 resize-y h-20 p-2 border rounded-md hidden"><%=  @resume.basic_info %></textarea>
        </div>
        <div class="inline-block w-1/2" data-resume-target="socialLinks">
          <p data-resume-target="socialLinksContent" class="break-words"><%= @formatted_social_links %></p>
          <textarea data-resume-target="socialLinksForm" class="w-full h-60 h-20 p-2 border rounded-md hidden"><%= @resume.social_links %></textarea>
        </div>
    </div>        
    <div class="pt-5l">
      <h1 data-resume-target="aboutMeTitle" class="text-xl font-bold py-3 h-200"><%= @resume.about_me_title%></h1>
      <input data-resume-target="aboutMeTitleForm" class="w-full resize-y h-20 p-2 border rounded-md hidden" value="<%= @resume.about_me_title%>">
      <p data-resume-target="aboutMeContent" class="overflow-auto"><%= @resume.about_me %></p>
      <textarea data-resume-target="aboutMeForm" data-resume-target="aboutMeForm" class="w-full h-48 resize-y h-20 p-2 border rounded-md hidden"><%= @resume.about_me %></textarea>
    </div>
    <div class="pt-5l">
      <h1 class="text-xl font-bold py-3">技能</h1>
      <ul class="relative">
        <% if @skills.present? %>
          <% @skills.each do |skill| %>
            <li class="inline-block px-5 py-3 border-2 border-gray-300 rounded-lg mr-2"><%= skill %></li>
          <% end %>
        <% else %>
          <li class="inline-block px-5 py-3 border-2 border-gray-300 rounded-lg mr-2">請輸入技能</li>
        <% end %>
      </ul>
    </div>
    <div class="pt-5l">
      <h1 class="text-xl font-bold py-3">語言</h1>
      <ul class="relative">
        <% if @languages.present? %>
          <% @languages.each do |language| %>
            <li class="inline-block px-5 py-3 border-2 border-gray-300 rounded-lg mr-2"><%= language %></li>
          <% end %>
        <% else %>
          <li class="inline-block px-5 py-3 border-2 border-gray-300 rounded-lg mr-2">請輸入語言</li>
        <% end %>
      </ul>
    </div>
    <div class="pt-5l" data-resume-target="workExperience">
      <h1 data-resume-target="workExperienceTitle" class="text-xl font-bold py-3"><%= @resume.work_experience_title %></h1>
      <input data-resume-target="workExperienceTitleForm" class="w-full h-10 resize-y h-20 p-2 border rounded-md hidden" value="<%= @resume.work_experience_title%>">
      <p data-resume-target="workExperienceContent" class="overflow-auto h-200"><%= @resume.work_experience %></p>
      <textarea data-resume-target="workExperienceForm" class="w-full h-48 resize-y h-20 p-2 border rounded-md hidden"><%= @resume.work_experience %></textarea>
    </div>
  </section>
    
  <div class="bg-gray-200 fixed top-68px right-0 bottom-0">
    <div class="h-full overflow-y-scroll flex-col justify-between align-center">
      <div class="flex justify-center my-4">
        <a class="rounded-lg mx-auto inline-block py-3 px-5 text-center text-white bg-amber-500 hover:bg-amber-800 cursor-pointer" href="#" data-action="click->resume#saveContent" data-account="<%= current_user.account %>" data-resume-target="updateContent" data-serial="<%= @resume.id %>">
          存儲更新
        </a>
      </div>
      <div class="px-10 pt-10 custom-width-250px">
        <p>組件一</p>
        <p>組件二</p>
        <p>組件三</p>
        <p>組件四</p>
      </div>
    </div>
  </div>
</div>