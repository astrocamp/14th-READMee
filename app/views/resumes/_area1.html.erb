<div class="area1">
  <% if @resume.area_1 == 1 %>
  
    <div class="flex min-h-min">
      <div >
        <div class="flex items-center justify-center pb-5 custom-width-250px">
          <% if @resume.profile.avatar.attached? %>
            <%= image_tag @resume.profile.avatar.variant(:thumb), class: "mx-auto" %>
          <% else %>
            <%= image_tag("defaultuser.png", class: "rounded-full w-32 h-32 mx-auto") %>
          <% end %>
        </div>
        <div class="flex flex-col items-center justify-center inline-block w-60">
          <%= f.text_field :full_name, class: "px-2 py-1 border-0 border-white font-bold rounded-md text-center", placeholder: "請輸入名字" %>
          <%= f.text_field :job_hunting, class: "px-2 py-1 border-0 border-white font-bold rounded-md text-center", placeholder: "請輸入想要應徵的工作" %>
          <%= f.text_field :phone, class: "px-2 py-1 border-0 border-white font-bold rounded-md text-center", placeholder: "請輸入電話" %>
          
          <% if @resume.social_links.present? %>
            <%= f.text_field :social_links, class: "text-center px-2 py-1 my-1 border-white rounded-md grow", placeholder: "請輸入連結" %>
          <% else %>
            <% if @resume.profile.social_links.first.present? %>
              <%= f.text_field :social_links, value: @resume.profile.social_links.first.link, class: "text-center px-2 py-1 my-1 border-white rounded-md grow", placeholder: "請輸入連結" %>
            <% else %>
              <%= f.text_field :social_links, class: "text-center px-2 py-1 my-1 border-white rounded-md grow", placeholder: "請輸入連結" %>
            <% end %>
          <% end %>
        </div>

        <div class="text-center">
          <h1 class="mt-1 text-lg font-bold">語言</h1>
          <div class="flex flex-col">
            
          <% if @resume.profile.languages.present? %>
            <ul data-profileInfo-target="languages" class="mt-2 text-gray-700">
              <% @resume.profile.languages.each do |language, level| %>
                <li><%= "#{language} • #{level}" %></li>
              <% end %>
            </ul>
          <% end %>
          </div>
        </div>
        <div class="flex flex-col items-center">
          <h2 class="font-bold">技能</h2>
          <ul data-profileInfo-target="skills" class="mt-2 text-gray-700">
            <% @resume.profile.skills.each do |skill| %>
              <li class="inline-block mr-2"><%= skill.tag %></li>
            <% end %>
          </ul>
        </div>
      </div>

      <div class="flex flex-col w-full">
        <h1 class="font-bold">簡介</h1>
        <%= f.text_area :about_me, class: "grow h-96 border-white rounded-md p-2", placeholder: "請輸入簡介內容" %>
      </div>
    </div>

  <% elsif @resume.area_1 == 2 %>
  
    <div>
      <div>
        <div class="flex">
          <div>
            <% if @resume.profile.avatar.attached? %>
              <%= image_tag @resume.profile.avatar.variant(:thumb), class: "mx-auto" %>
            <% else %>
              <%= image_tag("defaultuser.png", class: "rounded-full mx-auto") %>
            <% end %>
          </div>
          <div>
            <div class="grid w-3/4 grid-cols-3 grow">
              <div class="mr-2">
                <%= f.text_field :full_name, class: "px-2 py-1 my-1 border-white rounded-md", placeholder: "請輸入名字" %>
                <%= f.text_field :job_hunting, class: "px-2 py-1 my-1 border-0 border-white rounded-md", placeholder: "請輸入想要應徵的工作" %>
                <%= f.text_field :phone, class: "px-2 py-1 my-1 border-white rounded-md", placeholder: "請輸入電話" %> 
                           
                <% if @resume.social_links.present? %>
                  <%= f.text_field :social_links, class: "text-center px-2 py-1 my-1 border-white rounded-md grow", placeholder: "請輸入連結" %>
                <% else %>
                  <% if @resume.profile.social_links.first.present? %>
                    <%= f.text_field :social_links, value: @resume.profile.social_links.first.link, class: "text-center px-2 py-1 my-1 border-white rounded-md grow", placeholder: "請輸入連結" %>
                  <% else %>
                    <%= f.text_field :social_links, class: "text-center px-2 py-1 my-1 border-white rounded-md grow", placeholder: "請輸入連結" %>
                  <% end %>
                <% end %>
              </div>
              <div class="ml-2">
                <ul data-profileInfo-target="skills" class="mt-2 text-gray-700">
                  <% @resume.profile.skills.each do |skill| %>
                    <li class="inline-block mr-2"><%= skill.tag %></li>
                  <% end %>
                </ul>
              </div>
              <div>
                  <% if @resume.profile.languages.present? %>
                    <ul data-profileInfo-target="languages" class="mt-2 text-gray-700">
                      <% @resume.profile.languages.each do |language, level| %>
                        <li><%= "#{language} • #{level}" %></li>
                      <% end %>
                    </ul>
                  <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div>
        <h1 class="font-bold">簡介</h1>
        <%= f.text_area :about_me,
          class: "min-h-180 w-full grow px-2 py-1 my-1 border-white rounded-md",
          placeholder: "請輸入個人簡介" %>
      </div>
    </div>
    
  <% elsif @resume.area_1 == 3 %>
  
    <div>
      <div class="w-9/12 mx-auto min-h-min">
        <div>
          <div class="flex flex-col items-center justify-center ">
            <div class="flex items-center justify-center">
              <% if @resume.profile.avatar.attached? %>
                <%= image_tag @resume.profile.avatar.variant(:thumb), class: "mx-auto" %>
              <% else %>
                <%= image_tag("defaultuser.png", class: "rounded-full w-32 h-32 mx-auto") %>
              <% end %>
            </div>
            <%= f.text_field :full_name, class: "px-2 py-1 border-0 border-white font-bold rounded-md text-center", placeholder: "請輸入名字" %>
            <%= f.text_field :job_hunting, class: "px-2 py-1 my-1 border-0 border-white rounded-md text-center", placeholder: "請輸入想要的職位" %>
            <%= f.text_field :phone, class: "px-2 py-1 my-1 border-0 border-white border-0 border-white rounded-md text-center", placeholder: "請輸入電話" %>
            <%= f.text_field :address, class: "px-2 py-1 w-96 my-1 border-white rounded-md text-center", placeholder: "請輸入地址" %>
            
            <% if @resume.social_links.present? %>
              <%= f.text_field :social_links, class: "text-center px-2 w-96 py-1 my-1 border-white rounded-md grow", placeholder: "請輸入連結" %>
            <% else %>
              <% if @resume.profile.social_links.first.present? %>
                <%= f.text_field :social_links, value: @resume.profile.social_links.first.link, class: "text-center px-2 w-96 py-1 my-1 border-white rounded-md grow", placeholder: "請輸入連結" %>
              <% else %>
                <%= f.text_field :social_links, class: "text-center px-2 w-96 py-1 my-1 border-white rounded-md grow", placeholder: "請輸入連結" %>
              <% end %>
            <% end %>
  
          </div>
        </div>
      </div>
      <div class="flex flex-col w-full">
        <%= f.text_area :about_me, class: "px-3 grow h-48 border border-0 border-white rounded-md", placeholder: "請輸入簡介內容" %>
      </div>
      <div class="flex justify-between">
        <div class="grow">
          <h1 class="px-2 mt-1 text-lg font-bold">語言</h1>
          <% if @resume.profile.languages.present? %>
            <ul data-profileInfo-target="languages" class="mt-2 text-gray-700">
              <% @resume.profile.languages.each do |language, level| %>
                <li><%= "#{language} • #{level}" %></li>
              <% end %>
            </ul>
        <% end %>
        </div>
        <div class="grow">
          <h1 class="px-2 text-lg font-bold ">技能</h1>
          <ul data-profileInfo-target="skills" class="mt-2 text-gray-700">
            <% @resume.profile.skills.each do |skill| %>
              <li class="inline-block mr-2"><%= skill.tag %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>

  <% end %>
</div>