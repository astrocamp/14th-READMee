<% @job_matchings.each do |matching| %>
  <div class="w-9/12 m-10 mx-auto"> 
      <ul class="justify-between p-5 m-2 leading-6">
        <div>
          <li class="border shadow-lg md:flex">
            <div class="p-6">
              <img src="https://picsum.photos/100/100/?random=10">
            </div>
            <div class="p-2 md:w-2/3 ">    
              <div class="mt-2 ">
                <%= link_to "#{matching.company.name}", company_show_path(matching.company.id), class: "font-medium text-gray-500 hover:text-gray-400 sm:py-6 dark:text-gray-400 dark:hover:text-gray-500" %>
                <%= matching.created_at.in_time_zone("Taipei").strftime("%Y-%m-%d %I:%M %p") %>
              </div>
              <div class="mt-2">
                <%= link_to job_show_path(matching.job.id) do %>
                  <%= truncate(matching.job.content, length: 200) %>
                <% end %>
              </div>
            </div>
            <div class="p-2 md:w-1/3">
              <div>需求人數: <%= matching.job.num_of_people %></div>
              <div>年資: <%= matching.job.seniority %></div>
              <div>薪水: <%= matching.job.salary %></div>
              <div>地址: <%= matching.company.address %></div>
            </div>
          </li>
        </div>
        <div class="container p-10 mx-auto input">
          <h1 class="p-2 mb-2 font-semibold text-white rounded-lg text-md bg-amber-500 w-fit">我的面試通知</h1>
          <% if matching.notified == true %>
            <ul role="list" class="divide-y divide-gray-100">
              <li class="flex justify-between py-5 gap-x-6">
                <div class="flex min-w-0 gap-x-4">
                  <%= image_tag("defaultuser.png", class: "rounded-full w-10 h-10 mx-auto") %>
                  <div class="flex-auto min-w-0">
                    <p class="text-sm font-semibold leading-6 text-gray-900"><%= matching.interview_date %>  <%= matching.interview_time.in_time_zone("Taipei").strftime("%I:%M %p") %></p>
                    <p class="mt-1 text-xs leading-5 text-gray-500"><%= matching.interview_message %></p>
                  </div>
                </div>
                <div class="hidden shrink-0 sm:flex sm:flex-col sm:items-end">
                  <p class="text-sm leading-6 text-gray-900"><%= matching.company.name %></p>
                  <p class="mt-1 text-sm leading-5 text-gray-500">地址: <%= matching.company.address %></p>
                </div>
              </li>
            </ul>
          <% else %>
            <p class="font-semibold">目前沒有任何面試通知。</p>
          <% end %>
        </div>
      </ul>
    <hr>    
  </div>
<% end %>
