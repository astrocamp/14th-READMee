<div class="flex items-center gap-5 mt-28">
  <h2 class="text-2xl">文章列表</h2>    
  <%= link_to "新增文章",new_article_path, class: "rounded-lg py-1 px-5 text-white bg-amber-500 hover:bg-amber-800 cursor-pointer" %>
</div>


<section class= "flex justify-between">
  <ul>
    <% @articles.each do |article| %>
    <li class="mt-12">
    
    <%= link_to article.title, article_path(article.id), class: "hover:border-b-4 border-amber-300 text-xl" %>
    <div class="flex gap-4 mt-1">
      <%= link_to "更新", edit_article_path(article.id)%>
      <%= link_to "刪除", article_path(article.id), 
                                  data: {
                                    turbo_method: "delete",
                                    turbo_confirm: "確定要刪除?"
                                  }%>    
    </div>
    </li>
    <% end %>  
  </ul>
    
  <div class="container">
    <%= image_tag 'desk.jpg',class:"img" %>
  </div>

</section>
